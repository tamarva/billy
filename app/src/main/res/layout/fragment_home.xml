<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/home_fragment_history"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="EMPTY"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/home_fragment_recycler_view_wrapper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/home_fragment_recycler_view_wrapper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/home_fragment_scan_bill_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_fragment_history">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_fragment_discovered_devices_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_fragment_bill_items_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone" />

    </FrameLayout>

    <Button
        android:id="@+id/home_fragment_scan_bill_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/home_fragment_scan_bill_button_background"
        android:textAlignment="center"
        android:text="@string/scan"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_fragment_recycler_view_wrapper" />

    <Button
        android:id="@+id/home_fragment_send_email_button"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:text="send bill to email"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="@drawable/home_fragment_email_bill_button_background"
        android:shadowColor="#A8A8A8"
        android:shadowRadius="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/home_fragment_scan_bill_button"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>
